{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  },
  "GET/api/articles/:article_id": {
    "description": "serves an article object",
    "queries": [],
    "exampleResponse": {
      "article_id": 10,
      "title": "The effect of climate change",
      "topic": "enviroment",
      "author": "cosmas",
      "body": "Global warming is real",
      "created_at": 1594325460000,
      "votes": 50,
      "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700"
    }
  },
  "GET /api/articles?&sort_by=created_at&order=desc": {
    "description": "serves an array of all articles sorted by created_at",
    "queries": ["sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "author": "cosmas",
          "title": "The effect of climate change",
          "article_id": 3,
          "topic": "enviroment",
          "created_at": "2020-11-03T09:12:00.000Z",
          "votes": 50,
          "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700",
          "comment_count": "50"
        }
      ]
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves an array of comments for a given article_id",
    "queries": ["sort_by", "order"],
    "exampleResponse": {
      "comments": [
        {
          "comment_id": 7,
          "votes": 0,
          "created_at": "2020-11-03T21:00:00.000Z",
          "author": "cosmas",
          "body": "climate change is man made",
          "article_id": 5
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "adds a comment for a specific article ",
    "queries": ["username", "boby"],
    "exampleResponse": {
      "comment_id": 10,
      "body": "Spread love not hate",
      "article_id": 1,
      "author": "cosmas",
      "votes": 0,
      "created_at": "2025-01-30T00:21:56.424Z"
    }
  }
}
